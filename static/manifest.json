{
    "manifest_version": 2,
    "name": "Githuber",
    "description": "为 Githuber 每日发现优质内容。",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "chrome_url_overrides": {
        "newtab": "./index.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "file:///*",
        "activeTab"
    ]
}
